<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"

    tools:context="com.madega.ramadhani.arubainanawawi.Activity.HadithActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/go"
        android:orientation="horizontal">

        <LinearLayout


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:padding="12dp">

          <TextView
              android:id="@+id/hnumber"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="01"
              android:textColor="@color/backgroud"
              android:textSize="10pt"
              android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/hadith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="8dp"
            android:text="HADITH 1vcvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvv"
            android:textSize="8pt"

            />



    </LinearLayout>

</FrameLayout>


